@using GameZone.Settings;
@model IEnumerable<Game>

@{
    ViewData["Title"] = "Game";
}

<div class="row mt-5">
    @foreach (var game in Model)
    {
        <a class="col-lg-4 col-md-6 text-decoration-none rounded-3 overflow-hidden" asp-action="Details" asp-controller="Games" asp-route-id="@game.Id">
            <div style="max-width:345px" class="card border-success mb-3" >
                <div class="card-body" style="background-image: url(@($"{FileSettings.ImagePath}/{game.Cover}"));background-size:cover;
                background-position:center; height:350px" >
                    <div class="h-100 d-flex align-items-end">
                        <span class="badge bg-secondary rounded-0 fs-5">@game.Category?.Name</span>
                    </div>
                </div>
                <div class="card-footer text-muted d-flex justify-content-between align-items-centre">
                    <h5>@game.Name</h5>
                    @foreach(var d in game.Devices)
                    {
                        <i class=" me-2 @d.Device.Icon fs-4"></i>
                    }
                </div>
            </div>
        </a>
    }
</div>